          // Reset to original state
          state.categories = state.categories.filter(c => c.id <= 4);
          state.tags = state.tags.filter(t => t.id <= 4);
          state.menuItems = state.menuItems.filter(item => item.id <= 25);
          state.blogPosts = state.blogPosts.filter(post => post.id <= 3);
          state.siteData = {
            siteTitle: "GrubNmore",
            tagline: "Lagos Cloud Kitchen",
            heroTitle: "Lagos' Favorite Cloud Kitchen",
