      // Initialize Application
      document.addEventListener('DOMContentLoaded', function() {
        loadSiteContent();
        loadLGASelects();
        startSlideshow();
        loadCartFromStorage();
        updateCartCount();
        
        // ADDED: Load logo settings
        loadLogoFromStorage();
        updateLogoDisplay();
        
        // Setup form submissions
        document.getElementById('adminLoginForm').addEventListener('submit', function(e) {
          e.preventDefault();
          handleAdminLogin();
        });
        
        document.getElementById('specialOrderForm').addEventListener('submit', function(e) {
          e.preventDefault();
          handleSpecialOrder();
        });
        
        // Initialize with home section
        if (!window.location.hash) {
          showSection('home');
        } else {
          const hash = window.location.hash.substring(1);
          showSection(hash || 'home');
        }
        
        // Fix mobile menu toggle
        document.getElementById('mobileMenuBtn').addEventListener('click', function() {
          document.getElementById('mobileMenu').classList.add('open');
        });
        
        // Close mobile menu when clicking overlay
        document.getElementById('mobileMenu').addEventListener('click', function(e) {
          if (e.target === this) {
            closeMobileMenu();
          }
        });
      });

      // Load site content
      function loadSiteContent() {
        // Load from localStorage if available
        const savedSiteData = localStorage.getItem('grubnmore_site_data');
        if (savedSiteData) {
          const data = JSON.parse(savedSiteData);
          if (data.siteData) state.siteData = { ...state.siteData, ...data.siteData };
          if (data.categories) state.categories = data.categories;
          if (data.tags) state.tags = data.tags;
          if (data.menuItems) state.menuItems = data.menuItems;
          if (data.blogPosts) state.blogPosts = data.blogPosts;
          // ADDED: Load logo settings
          if (data.logoSettings) {
            state.logoSettings = data.logoSettings;
          }
        }

        // Update site title and tagline
        document.getElementById('siteTitle').textContent = state.siteData.siteTitle;
        document.getElementById('siteTaglineDisplay').textContent = state.siteData.tagline;
        
        // Update hero section
        document.getElementById('heroTitle').innerHTML = `Lagos' Favorite<br><span style="color: var(--warm-gold);">${state.siteData.heroSubtitle}</span>`;
        document.getElementById('heroDescription').textContent = state.siteData.heroDescription;
        
        // Update section titles
        document.getElementById('categoriesTitle').textContent = state.siteData.categoriesTitle;
        document.getElementById('categoriesDescription').textContent = state.siteData.categoriesDescription;
        document.getElementById('fastSellingTitle').textContent = state.siteData.fastSellingTitle;
        document.getElementById('fastSellingDescription').textContent = state.siteData.fastSellingDescription;
        document.getElementById('menuTitle').textContent = state.siteData.menuTitle;
        document.getElementById('menuDescription').textContent = state.siteData.menuDescription;
        document.getElementById('blogTitle').textContent = state.siteData.blogTitle;
        document.getElementById('blogDescription').textContent = state.siteData.blogDescription;
        document.getElementById('specialOrderTitle').textContent = state.siteData.specialOrderTitle;
        document.getElementById('specialOrderDescription').textContent = state.siteData.specialOrderDescription;
        document.getElementById('specialOrderNote').innerHTML = `<i class="fas fa-info-circle mr-2"></i>${state.siteData.specialOrderNote}`;
        document.getElementById('orderTitle').textContent = state.siteData.orderTitle;
        document.getElementById('orderDescription').textContent = state.siteData.orderDescription;
        document.getElementById('orderNote').innerHTML = `<strong>Note:</strong> ${state.siteData.orderNote}`;
        
        // Update footer
        document.getElementById('footerTitle').textContent = state.siteData.footerTitle;
        document.getElementById('footerDescription').textContent = state.siteData.footerDescription;
        document.getElementById('copyright').innerHTML = state.siteData.copyright;
        
        // Update contact info
        const contactInfo = document.getElementById('contactInfo');
        const phones = state.siteData.contactPhone.split('\n');
        contactInfo.innerHTML = `
          <div class="flex items-center">
            <i class="fas fa-phone mr-3"></i>
            <span>${phones[0] || '+234 812 345 6789'}</span>
          </div>
          <div class="flex items-center">
            <i class="fab fa-whatsapp mr-3"></i>
            <span>${phones[1] || phones[0] || '+234 812 345 6789'}</span>
          </div>
          <div class="flex items-center">
            <i class="fas fa-envelope mr-3"></i>
            <span>${state.siteData.contactEmail}</span>
          </div>
          <div class="flex items-center">
            <i class="fas fa-map-marker-alt mr-3"></i>
            <span>${state.siteData.contactAddress}</span>
          </div>
        `;
        
        // Update delivery hours
        const deliveryHoursDiv = document.getElementById('deliveryHours');
        const hours = state.siteData.deliveryHours.split('\n');
        deliveryHoursDiv.innerHTML = hours.map(hour => `<div>${hour}</div>`).join('');
        
        // Update hero images
        const slide1 = document.querySelector('#slide1 img');
        const slide2 = document.querySelector('#slide2 img');
        const slide3 = document.querySelector('#slide3 img');
        
        if (slide1 && state.siteData.heroImages[0]) slide1.src = state.siteData.heroImages[0];
        if (slide2 && state.siteData.heroImages[1]) slide2.src = state.siteData.heroImages[1];
        if (slide3 && state.siteData.heroImages[2]) slide3.src = state.siteData.heroImages[2];
        
        // Load categories
        loadCategories();
        
        // Load tags
        loadTags();
        
        // Load menu items
        loadMenuItems();
        
        // Load blog posts
        loadBlogPosts();
        
        // Load fast selling items
        loadFastSellingItems();
        
        // ADDED: Update logo display
        updateLogoDisplay();
      }

      // Load Lagos LGAs into all select elements
      function loadLGASelects() {
        const lgaSelects = document.querySelectorAll('select[id*="LGA"], select[id*="lga"], #specialOrderLGA');
        lgaSelects.forEach(select => {
          // Clear existing options except first
          while (select.options.length > 1) {
            select.remove(1);
          }
          
          state.lagosLGAs.forEach(lga => {
            const option = document.createElement('option');
            option.value = lga;
            option.textContent = lga;
            select.appendChild(option);
          });
        });
      }

      // Save site data - UPDATED TO INCLUDE LOGO SETTINGS
      function saveSiteData() {
        const data = {
          siteData: state.siteData,
          categories: state.categories,
          tags: state.tags,
          menuItems: state.menuItems,
          blogPosts: state.blogPosts,
          logoSettings: state.logoSettings // ADDED
        };
        localStorage.setItem('grubnmore_site_data', JSON.stringify(data));
      }

      // ADDED: Load logo from storage
      function loadLogoFromStorage() {
        const savedLogoSettings = localStorage.getItem('grubnmore_logo_settings');
        if (savedLogoSettings) {
          state.logoSettings = JSON.parse(savedLogoSettings);
        }
      }

      // ADDED: Save logo settings
      function saveLogoSettings() {
        localStorage.setItem('grubnmore_logo_settings', JSON.stringify(state.logoSettings));
        // Also save to main site data for export
        saveSiteData();
      }

      // ADDED: Update logo display on the site
      function updateLogoDisplay() {
        const logoElements = [
          document.getElementById('headerLogo'),
          document.getElementById('mobileLogo'),
          document.getElementById('footerLogo')
        ];
        
        logoElements.forEach(logoElement => {
          if (!logoElement) return;
          
          // Clear existing content
          logoElement.innerHTML = '';
          
          if (state.logoSettings.type === 'text') {
            // Create text logo
            const textElement = document.createElement('span');
            textElement.className = 'text-2xl font-bold';
            textElement.style.color = state.logoSettings.textColor;
            textElement.textContent = state.logoSettings.text;
            logoElement.appendChild(textElement);
            
            // Set background color
            logoElement.style.backgroundColor = state.logoSettings.backgroundColor;
          } else if (state.logoSettings.type === 'image' && state.logoSettings.imageUrl) {
            // Create image logo
            const imgElement = document.createElement('img');
            imgElement.src = state.logoSettings.imageUrl;
            imgElement.alt = 'GrubNmore Logo';
            imgElement.className = 'w-full h-full object-contain';
            imgElement.onerror = function() {
              // Fallback to text if image fails to load
              this.style.display = 'none';
              const fallbackText = document.createElement('span');
              fallbackText.className = 'text-2xl font-bold';
              fallbackText.style.color = state.logoSettings.textColor || '#4b5320';
              fallbackText.textContent = state.logoSettings.text || 'G';
              logoElement.appendChild(fallbackText);
            };
            logoElement.appendChild(imgElement);
            logoElement.style.backgroundColor = 'transparent';
          }
        });
        
        // Update logo preview in admin if admin panel is open
        updateLogoPreview();
      }

      // ADDED: Update logo preview in admin panel
      function updateLogoPreview() {
        const logoPreview = document.getElementById('logoPreview');
        if (!logoPreview) return;
        
        logoPreview.innerHTML = '';
        
        if (state.logoSettings.type === 'text') {
          const textElement = document.createElement('span');
          textElement.className = 'logo-preview-text';
          textElement.style.color = state.logoSettings.textColor;
          textElement.textContent = state.logoSettings.text;
          logoPreview.style.backgroundColor = state.logoSettings.backgroundColor;
          logoPreview.appendChild(textElement);
        } else if (state.logoSettings.type === 'image' && state.logoSettings.imageUrl) {
          const imgElement = document.createElement('img');
          imgElement.src = state.logoSettings.imageUrl;
          imgElement.alt = 'Logo Preview';
          imgElement.className = 'w-full h-full object-contain';
          imgElement.onerror = function() {
            // Show error placeholder
            this.style.display = 'none';
            const errorText = document.createElement('span');
            errorText.className = 'logo-preview-text';
            errorText.textContent = '!';
            errorText.style.color = '#dc2626';
            logoPreview.appendChild(errorText);
          };
          logoPreview.style.backgroundColor = 'transparent';
          logoPreview.appendChild(imgElement);
        } else {
          const defaultElement = document.createElement('span');
          defaultElement.className = 'logo-preview-text';
          defaultElement.textContent = 'G';
          logoPreview.style.backgroundColor = '#ffffff';
          logoPreview.appendChild(defaultElement);
        }
      }

      // ADDED: Select logo type in admin
      function selectLogoType(type) {
        state.logoSettings.type = type;
        
        const textLogoBtn = document.getElementById('textLogoBtn');
        const imageLogoBtn = document.getElementById('imageLogoBtn');
        const textLogoOptions = document.getElementById('textLogoOptions');
        const imageLogoOptions = document.getElementById('imageLogoOptions');
        
        if (type === 'text') {
          if (textLogoBtn) {
            textLogoBtn.style.backgroundColor = 'var(--army-green)';
            textLogoBtn.style.color = 'white';
          }
          if (imageLogoBtn) {
            imageLogoBtn.style.backgroundColor = '';
            imageLogoBtn.style.color = 'var(--army-green)';
          }
          
          if (textLogoOptions) textLogoOptions.classList.remove('hidden');
          if (imageLogoOptions) imageLogoOptions.classList.add('hidden');
          
          // Load current text logo settings
          if (document.getElementById('logoText')) {
            document.getElementById('logoText').value = state.logoSettings.text;
          }
          if (document.getElementById('logoColor')) {
            document.getElementById('logoColor').value = state.logoSettings.textColor;
          }
          if (document.getElementById('logoBgColor')) {
            document.getElementById('logoBgColor').value = state.logoSettings.backgroundColor;
          }
        } else {
          if (imageLogoBtn) {
            imageLogoBtn.style.backgroundColor = 'var(--army-green)';
            imageLogoBtn.style.color = 'white';
          }
          if (textLogoBtn) {
            textLogoBtn.style.backgroundColor = '';
            textLogoBtn.style.color = 'var(--army-green)';
          }
          
          if (imageLogoOptions) imageLogoOptions.classList.remove('hidden');
          if (textLogoOptions) textLogoOptions.classList.add('hidden');
          
          // Load current image logo settings
          if (document.getElementById('logoImageUrl')) {
            document.getElementById('logoImageUrl').value = state.logoSettings.imageUrl || '';
          }
          
          // Setup file upload listener
          const logoUpload = document.getElementById('logoUpload');
          if (logoUpload) {
            logoUpload.addEventListener('change', handleLogoUpload);
          }
        }
      }

      // ADDED: Handle logo file upload
      function handleLogoUpload(event) {
        const file = event.target.files[0];
        if (!file) return;
        
        // Update file name display
        const fileNameElement = document.getElementById('logoFileName');
        if (fileNameElement) {
          fileNameElement.textContent = file.name;
        }
        
        // Check file size (max 2MB)
        if (file.size > 2 * 1024 * 1024) {
          showNotification('File size too large. Maximum size is 2MB.', 'error');
          return;
        }
        
        // Check file type
        if (!file.type.match('image.*')) {
          showNotification('Please select an image file.', 'error');
          return;
        }
        
        // Create temporary URL for preview
        const reader = new FileReader();
        reader.onload = function(e) {
          state.logoSettings.imageUrl = e.target.result;
          updateLogoPreview();
          showNotification('Logo image ready to save!', 'success');
        };
        reader.readAsDataURL(file);
      }

      // ADDED: Update logo from admin
      function updateLogo() {
        if (state.logoSettings.type === 'text') {
          // Get text logo settings
          const text = document.getElementById('logoText')?.value?.trim() || 'G';
          const textColor = document.getElementById('logoColor')?.value || '#4b5320';
          const bgColor = document.getElementById('logoBgColor')?.value || '#ffffff';
          
          state.logoSettings.text = text;
          state.logoSettings.textColor = textColor;
          state.logoSettings.backgroundColor = bgColor;
          state.logoSettings.imageUrl = ''; // Clear image URL if switching to text
          
        } else if (state.logoSettings.type === 'image') {
          // Get image logo settings
          const imageUrl = document.getElementById('logoImageUrl')?.value?.trim() || '';
          
          if (!imageUrl && !state.logoSettings.imageUrl) {
            showNotification('Please provide a logo image URL or upload an image', 'error');
            return;
          }
          
          if (imageUrl) {
            state.logoSettings.imageUrl = imageUrl;
          }
          // If URL is empty but we have uploaded image, keep the uploaded image
        }
        
        // Save and update
        saveLogoSettings();
        updateLogoDisplay();
        showNotification('Logo updated successfully!', 'success');
      }

      // Load categories
      function loadCategories() {
        const categoriesContainer = document.getElementById('categoriesContainer');
        categoriesContainer.innerHTML = '';
        
        state.categories.forEach(category => {
          const categoryCard = document.createElement('div');
          categoryCard.className = 'category-card';
          categoryCard.onclick = () => {
            if (category.id === 4) {
              showSection('fast-selling');
            } else {
              filterMenu(category.name.toLowerCase().replace(' & ', '-').split(' ')[0]);
            }
          };
          
          categoryCard.innerHTML = `
            <div class="category-icon" style="background: linear-gradient(135deg, ${category.color} 0%, ${category.color}99 100%);">
              <i class="${category.icon}"></i>
            </div>
            <h3 class="text-xl font-bold mb-2" style="color: var(--army-green);">${category.name}</h3>
            <p class="text-gray-600 mb-4">${category.description}</p>
            <span class="inline-block px-4 py-1 rounded-full text-sm font-medium" style="background-color: ${category.color}; color: white;">
              ${category.timing}
            </span>
          `;
          
          categoriesContainer.appendChild(categoryCard);
        });
        
        // Load category list for admin
        loadCategoryList();
        
        // Load filter buttons
        loadFilterButtons();
      }

      function loadFilterButtons() {
        const filtersContainer = document.getElementById('menuFilters');
        // Clear existing buttons except first
        while (filtersContainer.children.length > 1) {
          filtersContainer.removeChild(filtersContainer.lastChild);
        }
        
        // Add category filter buttons
        state.categories.forEach(category => {
          if (category.id !== 4) { // Don't add Fast Sellers as filter
            const categoryKey = category.name.toLowerCase().replace(' & ', '-').split(' ')[0];
            const button = document.createElement('button');
            button.className = 'px-6 py-2 rounded-full font-medium transition-all hover:bg-gray-100';
            button.style.color = 'var(--army-green)';
            button.style.border = '2px solid var(--army-green)';
            button.textContent = category.name;
            button.onclick = () => filterMenu(categoryKey);
            filtersContainer.appendChild(button);
          }
        });
        
        // Add Protein Options button
        const proteinButton = document.createElement('button');
        proteinButton.className = 'px-6 py-2 rounded-full font-medium transition-all hover:bg-gray-100';
        proteinButton.style.color = 'var(--army-green)';
        proteinButton.style.border = '2px solid var(--army-green)';
        proteinButton.textContent = 'Protein Options';
        proteinButton.onclick = () => filterMenu('protein');
        filtersContainer.appendChild(proteinButton);
      }

      // Load tags
      function loadTags() {
        const tagsContainer = document.getElementById('tagBanners');
        tagsContainer.innerHTML = '';
        
        // Sort tags by order
        const sortedTags = [...state.tags].sort((a, b) => a.order - b.order);
        
        sortedTags.forEach(tag => {
          const tagElement = document.createElement('span');
          tagElement.className = `tag-banner ${tag.color}`;
          tagElement.innerHTML = `<i class="${tag.icon} mr-2"></i>${tag.text}`;
          tagsContainer.appendChild(tagElement);
        });
        
        // Load tag list for admin
        loadTagList();
      }

      // Menu Functions
      function loadMenuItems() {
        const menuGrid = document.getElementById('menuGrid');
        menuGrid.innerHTML = '';
        
        state.menuItems.forEach(item => {
          const menuItem = document.createElement('div');
          menuItem.className = 'menu-item-card';
          menuItem.setAttribute('data-category', item.category);
          
          menuItem.innerHTML = `
            <div class="relative h-48">
              <img src="${item.image}" alt="${item.name}" class="w-full h-full object-cover">
              <span class="menu-item-badge" style="background-color: ${getBadgeColor(item.badge)}; color: white;">
                ${item.badge}
              </span>
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-lg font-bold" style="color: var(--army-green);">${item.name}</h3>
                <span class="price-tag">₦${item.price.toLocaleString()}</span>
              </div>
              <p class="text-gray-600 text-sm mb-4">${item.description}</p>
              <button onclick="addToCart(${item.id})" 
                      class="w-full btn-primary py-2 text-sm">
                <i class="fas fa-plus mr-2"></i>Add to Order
              </button>
            </div>
          `;
          
          menuGrid.appendChild(menuItem);
        });
        
        // Load price list for admin
        loadPriceList();
      }

      function loadFastSellingItems() {
        const fastSellingGrid = document.getElementById('fastSellingGrid');
        fastSellingGrid.innerHTML = '';
        
        const fastSellingItems = state.menuItems.filter(item => item.category === 'fast-selling');
        
        fastSellingItems.forEach(item => {
          const menuItem = document.createElement('div');
          menuItem.className = 'menu-item-card';
          
          menuItem.innerHTML = `
            <div class="relative h-48">
              <img src="${item.image}" alt="${item.name}" class="w-full h-full object-cover">
              <span class="fast-selling-badge">🔥 Top Seller</span>
              <span class="menu-item-badge" style="background-color: ${getBadgeColor(item.badge)}; color: white;">
                ${item.badge}
              </span>
            </div>
            <div class="p-6">
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-lg font-bold" style="color: var(--army-green);">${item.name}</h3>
                <span class="price-tag">₦${item.price.toLocaleString()}</span>
              </div>
              <p class="text-gray-600 text-sm mb-4">${item.description}</p>
              <button onclick="addToCart(${item.id})" 
                      class="w-full btn-primary py-2 text-sm">
                <i class="fas fa-plus mr-2"></i>Add to Order
              </button>
            </div>
          `;
          
          fastSellingGrid.appendChild(menuItem);
        });
      }

      function getBadgeColor(badge) {
        switch(badge) {
          case 'Hot': return 'var(--hot-orange)';
          case 'Fresh': return 'var(--fresh-green)';
          case 'Spicy': return 'var(--spicy-red)';
          case 'Homemade': return 'var(--warm-gold)';
          case 'Juicy': return 'var(--army-green)';
          case 'Crispy': return 'var(--army-green-light)';
          case 'Creamy': return 'var(--army-green)';
          case 'Simple': return '#6b7280';
          default: return 'var(--army-green)';
        }
      }

      function filterMenu(category) {
        showSection('menu');
        
        const items = document.querySelectorAll('.menu-item-card');
        const buttons = document.querySelectorAll('#menuFilters button');
        
        // Update active button
        buttons.forEach(btn => {
          const btnText = btn.textContent.trim().toLowerCase();
          const categoryMap = {
            'breakfast': 'breakfast',
            'rice meals': 'rice',
            'pasta & noodles': 'pasta',
            'protein options': 'protein',
            'all items': 'all'
          };
          
          const categoryKey = categoryMap[btnText] || btnText.toLowerCase().split(' ')[0];
          
          if ((category === 'all' && btnText === 'all items') || 
              (category !== 'all' && categoryKey === category)) {
            btn.style.backgroundColor = 'var(--army-green)';
            btn.style.color = 'white';
            btn.style.border = 'none';
          } else {
            btn.style.backgroundColor = '';
            btn.style.color = 'var(--army-green)';
            btn.style.border = '2px solid var(--army-green)';
          }
        });
        
        // Filter items
        items.forEach(item => {
          if (category === 'all' || item.getAttribute('data-category') === category) {
            item.style.display = 'block';
            setTimeout(() => {
              item.style.opacity = '1';
              item.style.transform = 'translateY(0)';
            }, 50);
          } else {
            item.style.opacity = '0';
            item.style.transform = 'translateY(20px)';
            setTimeout(() => {
              item.style.display = 'none';
            }, 300);
          }
        });
      }

      // Cart Functions
      function addToCart(itemId) {
        const item = state.menuItems.find(i => i.id === itemId);
        if (!item) return;

        const existingItem = state.cart.find(i => i.id === itemId);
        
        if (existingItem) {
          existingItem.quantity += 1;
        } else {
          state.cart.push({
            ...item,
            quantity: 1
          });
        }

        updateCart();
        saveCartToStorage();
        
        // Show notification
        showNotification(`${item.name} added to cart!`);
      }

      function updateCart() {
        updateCartCount();
        updateCartDisplay();
      }

      function updateCartCount() {
        const totalItems = state.cart.reduce((sum, item) => sum + item.quantity, 0);
        document.getElementById('cartCount').textContent = totalItems;
        document.getElementById('cartCount').style.display = totalItems > 0 ? 'flex' : 'none';
      }

      function updateCartDisplay() {
        const cartItems = document.getElementById('cartItems');
        const orderItems = document.getElementById('orderItems');
        
        if (state.cart.length === 0) {
          cartItems.innerHTML = `
            <div class="text-center py-12 text-gray-500">
              <i class="fas fa-shopping-bag text-4xl mb-4"></i>
              <p class="font-medium">Your cart is empty</p>
              <p class="text-sm mt-2">Add delicious items from our menu</p>
            </div>
          `;
          
          orderItems.innerHTML = `
            <div class="text-center py-8 text-gray-500">
              <i class="fas fa-shopping-bag text-4xl mb-4"></i>
              <p>Your cart is empty</p>
              <p class="text-sm">Add items from our menu</p>
            </div>
          `;
          
          document.getElementById('cartSubtotal').textContent = '₦0';
          document.getElementById('cartTotal').textContent = '₦0';
          document.getElementById('orderTotal').textContent = '₦0';
          return;
        }

        let cartHTML = '';
        let orderHTML = '';
        let subtotal = 0;

        state.cart.forEach(item => {
          const itemTotal = item.price * item.quantity;
          subtotal += itemTotal;

          cartHTML += `
            <div class="cart-item">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <h4 class="font-medium" style="color: var(--army-green);">${item.name}</h4>
                  <p class="text-sm text-gray-600 mt-1">₦${item.price.toLocaleString()} each</p>
                </div>
                <div class="flex items-center space-x-3">
                  <div class="flex items-center border rounded-lg">
                    <button onclick="updateQuantity(${item.id}, -1)" class="px-3 py-1 hover:bg-gray-100">
                      <i class="fas fa-minus text-xs"></i>
                    </button>
                    <span class="px-3 py-1">${item.quantity}</span>
                    <button onclick="updateQuantity(${item.id}, 1)" class="px-3 py-1 hover:bg-gray-100">
                      <i class="fas fa-plus text-xs"></i>
                    </button>
                  </div>
                  <span class="font-medium" style="color: var(--army-green);">₦${itemTotal.toLocaleString()}</span>
                  <button onclick="removeFromCart(${item.id})" class="text-red-500 hover:text-red-700 ml-2">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>
          `;

          orderHTML += `
            <div class="flex justify-between items-center py-3 border-b border-gray-100">
              <div>
                <span class="font-medium">${item.name}</span>
                <div class="text-sm text-gray-600">${item.quantity} × ₦${item.price.toLocaleString()}</div>
              </div>
              <span class="font-medium" style="color: var(--army-green);">₦${itemTotal.toLocaleString()}</span>
            </div>
          `;
        });

        const deliveryFee = 500;
        const total = subtotal + deliveryFee;

        cartItems.innerHTML = cartHTML;
        orderItems.innerHTML = orderHTML;
        document.getElementById('cartSubtotal').textContent = `₦${subtotal.toLocaleString()}`;
        document.getElementById('cartTotal').textContent = `₦${total.toLocaleString()}`;
        document.getElementById('orderTotal').textContent = `₦${total.toLocaleString()}`;
      }

      function updateQuantity(itemId, change) {
        const item = state.cart.find(i => i.id === itemId);
        if (!item) return;

        item.quantity += change;
        
        if (item.quantity <= 0) {
          state.cart = state.cart.filter(i => i.id !== itemId);
        }

        updateCart();
        saveCartToStorage();
      }

      function removeFromCart(itemId) {
        state.cart = state.cart.filter(i => i.id !== itemId);
        updateCart();
        saveCartToStorage();
        showNotification('Item removed from cart');
      }

      function toggleCart() {
        const sidebar = document.getElementById('cartSidebar');
        const overlay = document.getElementById('cartOverlay');
        
        if (sidebar.classList.contains('open')) {
          sidebar.classList.remove('open');
          overlay.classList.add('hidden');
          document.getElementById('whatsappCheckoutForm').classList.add('hidden');
        } else {
          sidebar.classList.add('open');
          overlay.classList.remove('hidden');
        }
      }

      function toggleWhatsAppCheckout() {
        const form = document.getElementById('whatsappCheckoutForm');
        if (state.cart.length === 0) {
          showNotification('Please add items to your cart first');
          return;
        }
        
        if (form.classList.contains('hidden')) {
          form.classList.remove('hidden');
          loadLGASelects();
        } else {
          submitWhatsAppCheckout();
        }
      }

      function submitWhatsAppCheckout() {
        const name = document.getElementById('cartCustomerName').value;
        const phone = document.getElementById('cartCustomerPhone').value;
        const lga = document.getElementById('cartCustomerLGA').value;
        const address = document.getElementById('cartDeliveryAddress').value;

        if (!name || !phone || !lga || !address) {
          showNotification('Please fill in all delivery details');
          return;
        }

        let orderSummary = '';
        let subtotal = 0;

        state.cart.forEach(item => {
          const itemTotal = item.price * item.quantity;
          subtotal += itemTotal;
          orderSummary += `• ${item.name} (${item.quantity} × ₦${item.price.toLocaleString()}) = ₦${itemTotal.toLocaleString()}\n`;
        });

        const total = subtotal + 500;
        const message = `🍽️ *NEW ORDER - GRUBNMORE* 🍽️

👤 *Customer Information*
• Name: ${name}
• Phone: ${phone}
• LGA: ${lga}
• Address: ${address}

🛒 *Order Summary*
${orderSummary}
📦 Delivery Fee: ₦500
💰 *Total Amount: ₦${total.toLocaleString()}*

🚚 *Delivery Information*
Please confirm order availability and estimated delivery time.`;

        const encodedMessage = encodeURIComponent(message);
        const whatsappUrl = `https://wa.me/${state.siteData.whatsappNumber}?text=${encodedMessage}`;

        window.open(whatsappUrl, '_blank');
        
        state.cart = [];
        updateCart();
        saveCartToStorage();
        toggleCart();
        
        showNotification('Order sent to WhatsApp!', 'success');
      }

      function continueShopping() {
        toggleCart();
        showSection('menu');
      }

      // Order Functions
      function submitOrder() {
        if (state.cart.length === 0) {
          showNotification('Please add items to your cart first');
          return;
        }

        const name = document.getElementById('customerName').value;
        const phone = document.getElementById('customerPhone').value;
        const email = document.getElementById('customerEmail').value;
        const lga = document.getElementById('customerLGA').value;
        const address = document.getElementById('deliveryAddress').value;
        const time = document.getElementById('deliveryTime').value;
        const instructions = document.getElementById('specialInstructions').value;

        if (!name || !phone || !lga || !address) {
          showNotification('Please fill in all required fields');
          return;
        }

        let orderSummary = '';
        let subtotal = 0;

        state.cart.forEach(item => {
          const itemTotal = item.price * item.quantity;
          subtotal += itemTotal;
          orderSummary += `• ${item.name} (${item.quantity} × ₦${item.price.toLocaleString()}) = ₦${itemTotal.toLocaleString()}\n`;
        });

        const total = subtotal + 500;
        const message = `🍽️ *NEW ORDER - GRUBNMORE* 🍽️

👤 *Customer Information*
• Name: ${name}
• Phone: ${phone}
• Email: ${email || 'Not provided'}
• LGA: ${lga}
• Address: ${address}
• Preferred Time: ${time}
• Instructions: ${instructions || 'None'}

🛒 *Order Summary*
${orderSummary}
📦 Delivery Fee: ₦500
💰 *Total Amount: ₦${total.toLocaleString()}*

🚚 *Delivery Information*
Please confirm order availability and estimated delivery time.`;

        const encodedMessage = encodeURIComponent(message);
        const whatsappUrl = `https://wa.me/${state.siteData.whatsappNumber}?text=${encodedMessage}`;

        window.open(whatsappUrl, '_blank');
        
        state.cart = [];
        updateCart();
        saveCartToStorage();
        document.getElementById('orderForm').reset();
        
        showNotification('Order submitted! Opening WhatsApp...', 'success');
      }

      function openWhatsAppOrder() {
        if (state.cart.length === 0) {
          showSection('menu');
          showNotification('Please select items from our menu first');
          return;
        }
        proceedToCheckout();
      }

      function proceedToCheckout() {
        showSection('order');
        setTimeout(() => {
          document.getElementById('order').scrollIntoView({ behavior: 'smooth' });
        }, 100);
      }

      // Special Order Functions
      function handleSpecialOrder() {
        const form = document.getElementById('specialOrderForm');
        const formData = new FormData(form);
        
        let message = `🌟 *SPECIAL ORDER REQUEST* 🌟\n\n`;
        
        for (let [key, value] of formData) {
          if (value) {
            message += `• ${key}: ${value}\n`;
          }
        }
        
        const encodedMessage = encodeURIComponent(message);
        const whatsappUrl = `https://wa.me/${state.siteData.whatsappNumber}?text=${encodedMessage}`;
        
        window.open(whatsappUrl, '_blank');
        form.reset();
        showNotification('Special order request sent!', 'success');
      }

      // Blog Functions
      function loadBlogPosts() {
        const blogGrid = document.getElementById('blogGrid');
        blogGrid.innerHTML = '';
        
        state.blogPosts.forEach(post => {
          const blogCard = document.createElement('div');
          blogCard.className = 'blog-card';
          
          blogCard.innerHTML = `
            <div class="h-48 overflow-hidden">
              <img src="${post.image}" alt="${post.title}" class="w-full h-full object-cover hover:scale-110 transition-transform duration-300">
            </div>
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <span class="px-2 py-1 rounded-full" style="background-color: var(--army-green); color: white;">${post.category}</span>
                <span class="mx-2">•</span>
                <span>${post.date}</span>
              </div>
              <h3 class="text-xl font-bold mb-3" style="color: var(--army-green);">${post.title}</h3>
              <p class="text-gray-600 mb-4">${post.content}</p>
              <button onclick="readBlogPost(${post.id})" class="text-sm font-medium" style="color: var(--army-green);">
                Read More <i class="fas fa-arrow-right ml-1"></i>
              </button>
            </div>
          `;
          
          blogGrid.appendChild(blogCard);
        });
        
        // Load blog list for admin
        loadBlogList();
      }

      function readBlogPost(postId) {
        const post = state.blogPosts.find(p => p.id === postId);
        if (post) {
          alert(`Reading: ${post.title}\n\n${post.content}`);
        }
      }

      // Slideshow Functions
      function startSlideshow() {
        setInterval(() => {
          nextSlide();
        }, 5000);
      }

      function goToSlide(index) {
        state.slides.forEach((slide, i) => {
          const slideElement = document.getElementById(slide.id);
          const indicator = document.querySelectorAll('.slide-indicator')[i];
          
          if (i === index) {
            slideElement.classList.remove('opacity-0');
            slideElement.classList.add('opacity-100');
            indicator.classList.remove('bg-white/50');
            indicator.classList.add('bg-white');
            state.currentSlide = index;
          } else {
            slideElement.classList.remove('opacity-100');
            slideElement.classList.add('opacity-0');
            indicator.classList.remove('bg-white');
            indicator.classList.add('bg-white/50');
          }
        });
      }

      function nextSlide() {
        const nextIndex = (state.currentSlide + 1) % state.slides.length;
        goToSlide(nextIndex);
      }

      // Navigation Functions
      function showSection(sectionId) {
        const sections = ['home', 'menu', 'fast-selling', 'blog', 'special-order', 'order'];
        sections.forEach(id => {
          const section = document.getElementById(id);
          if (section) {
            section.style.display = 'none';
          }
        });

        const section = document.getElementById(sectionId);
        if (section) {
          section.style.display = 'block';
          
          setTimeout(() => {
            section.scrollIntoView({ behavior: 'smooth' });
          }, 100);
        }

        history.replaceState(null, null, `#${sectionId}`);
        
        closeMobileMenu();
      }

      function closeMobileMenu() {
        const mobileMenu = document.getElementById('mobileMenu');
        if (mobileMenu) {
          mobileMenu.classList.remove('open');
        }
      }

      // ADMIN FUNCTIONS
      function showAdminLogin() {
        document.getElementById('adminLoginModal').classList.remove('hidden');
      }

      function closeAdminLogin() {
        document.getElementById('adminLoginModal').classList.add('hidden');
      }

      function handleAdminLogin() {
        const username = document.getElementById('adminUsername').value;
        const password = document.getElementById('adminPassword').value;
        
        if (username === 'GrubNLagosCloud1' && password === '440012A') {
          closeAdminLogin();
          showAdminPanel();
          loadAdminData();
        } else {
          showNotification('Invalid credentials. Please try again.', 'error');
        }
      }

      function showAdminPanel() {
        document.getElementById('adminPanelModal').classList.remove('hidden');
      }

      function closeAdminPanel() {
        document.getElementById('adminPanelModal').classList.add('hidden');
      }

      function loadAdminData() {
        // Load site branding
        document.getElementById('siteTitleInput').value = state.siteData.siteTitle;
        document.getElementById('siteTagline').value = state.siteData.tagline;
        document.getElementById('heroTitleInput').value = state.siteData.heroTitle;
        document.getElementById('heroSubtitleInput').value = state.siteData.heroSubtitle;
        document.getElementById('heroDescriptionInput').value = state.siteData.heroDescription;
        
        // Load section titles
        document.getElementById('categoriesTitleInput').value = state.siteData.categoriesTitle;
        document.getElementById('categoriesDescriptionInput').value = state.siteData.categoriesDescription;
        document.getElementById('fastSellingTitleInput').value = state.siteData.fastSellingTitle;
        document.getElementById('fastSellingDescriptionInput').value = state.siteData.fastSellingDescription;
        
        // Load contact & footer
        document.getElementById('footerTitleInput').value = state.siteData.footerTitle;
        document.getElementById('footerDescriptionInput').value = state.siteData.footerDescription;
        document.getElementById('contactPhone').value = state.siteData.contactPhone;
        document.getElementById('contactEmail').value = state.siteData.contactEmail;
        document.getElementById('contactAddress').value = state.siteData.contactAddress;
        document.getElementById('deliveryHoursInput').value = state.siteData.deliveryHours;
        document.getElementById('copyrightText').value = state.siteData.copyright.replace(/&copy;/g, '©').replace(/&nbsp;/g, ' ');
        
        // Load images
        document.getElementById('heroImage1').value = state.siteData.heroImages[0] || '';
        document.getElementById('heroImage2').value = state.siteData.heroImages[1] || '';
        document.getElementById('heroImage3').value = state.siteData.heroImages[2] || '';
        
        // Load logo settings
        document.getElementById('logoText').value = state.logoSettings.text;
        document.getElementById('logoColor').value = state.logoSettings.textColor;
        document.getElementById('logoBgColor').value = state.logoSettings.backgroundColor;
        document.getElementById('logoImageUrl').value = state.logoSettings.imageUrl || '';
        
        // Set initial logo type
        selectLogoType(state.logoSettings.type);
        updateLogoPreview();
        
        // Setup file upload listener
        const logoUpload = document.getElementById('logoUpload');
        if (logoUpload) {
          logoUpload.addEventListener('change', handleLogoUpload);
        }
        
        // Load lists
        loadPriceList();
        loadCategoryList();
        loadTagList();
        loadBlogList();
      }

      function loadPriceList() {
        const priceList = document.getElementById('priceList');
        priceList.innerHTML = '';
        
        state.menuItems.forEach(item => {
          const div = document.createElement('div');
          div.className = 'flex justify-between items-center p-2 border-b hover:bg-gray-50 cursor-pointer';
          div.onclick = () => selectProductForEdit(item.id);
          div.innerHTML = `
            <span class="text-sm">${item.name}</span>
            <div class="flex items-center space-x-2">
              <span class="text-sm font-medium">₦${item.price.toLocaleString()}</span>
              <button onclick="event.stopPropagation(); deleteProduct(${item.id})" class="text-red-500 hover:text-red-700">
                <i class="fas fa-trash text-xs"></i>
              </button>
            </div>
          `;
          priceList.appendChild(div);
        });
      }

      function selectProductForEdit(productId) {
        const product = state.menuItems.find(p => p.id === productId);
        if (!product) return;
        
        state.selectedProductId = productId;
        
        document.getElementById('productName').value = product.name;
        document.getElementById('productPrice').value = product.price;
        document.getElementById('productCategory').value = product.category;
        document.getElementById('productBadge').value = product.badge;
        document.getElementById('productDescription').value = product.description;
        document.getElementById('productImage').value = product.image;
        
        showNotification(`Selected "${product.name}" for editing`);
      }

      function addProduct() {
        const name = document.getElementById('productName').value;
        const price = parseInt(document.getElementById('productPrice').value);
        const category = document.getElementById('productCategory').value;
        const badge = document.getElementById('productBadge').value;
        const description = document.getElementById('productDescription').value;
        const image = document.getElementById('productImage').value;
        
        if (!name || !price || !description) {
          showNotification('Please fill in all required fields', 'error');
          return;
        }
        
        const newProduct = {
          id: state.menuItems.length > 0 ? Math.max(...state.menuItems.map(p => p.id)) + 1 : 1,
          name: name,
          price: price,
          category: category,
          badge: badge,
          description: description,
          image: image || 'https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80'
        };
        
        state.menuItems.push(newProduct);
        saveSiteData();
        loadMenuItems();
        loadFastSellingItems();
        loadPriceList();
        
        document.getElementById('productName').value = '';
        document.getElementById('productPrice').value = '';
        document.getElementById('productDescription').value = '';
        document.getElementById('productImage').value = '';
        
        showNotification('Product added successfully!', 'success');
      }

      function updateProduct() {
        if (!state.selectedProductId) {
          showNotification('Please select a product to edit first', 'error');
          return;
        }
        
        const product = state.menuItems.find(p => p.id === state.selectedProductId);
        if (!product) return;
        
        product.name = document.getElementById('productName').value;
        product.price = parseInt(document.getElementById('productPrice').value);
        product.category = document.getElementById('productCategory').value;
        product.badge = document.getElementById('productBadge').value;
        product.description = document.getElementById('productDescription').value;
        product.image = document.getElementById('productImage').value;
        
        saveSiteData();
        loadMenuItems();
        loadFastSellingItems();
        loadPriceList();
        
        showNotification('Product updated successfully!', 'success');
      }

      function deleteProduct(productId) {
        if (confirm('Are you sure you want to delete this product?')) {
          state.menuItems = state.menuItems.filter(i => i.id !== productId);
          saveSiteData();
          loadMenuItems();
          loadFastSellingItems();
          loadPriceList();
          showNotification('Product deleted!', 'success');
        }
      }

      function searchProduct() {
        const searchTerm = document.getElementById('searchProduct').value.toLowerCase();
        const filtered = state.menuItems.filter(item => 
          item.name.toLowerCase().includes(searchTerm) || 
          item.description.toLowerCase().includes(searchTerm)
        );
        
        const priceList = document.getElementById('priceList');
        priceList.innerHTML = '';
        
        filtered.forEach(item => {
          const div = document.createElement('div');
          div.className = 'flex justify-between items-center p-2 border-b hover:bg-gray-50 cursor-pointer';
          div.onclick = () => selectProductForEdit(item.id);
          div.innerHTML = `
            <span class="text-sm">${item.name}</span>
            <div class="flex items-center space-x-2">
              <span class="text-sm font-medium">₦${item.price.toLocaleString()}</span>
              <button onclick="event.stopPropagation(); deleteProduct(${item.id})" class="text-red-500 hover:text-red-700">
                <i class="fas fa-trash text-xs"></i>
              </button>
            </div>
          `;
          priceList.appendChild(div);
        });
      }

      function loadCategoryList() {
        const categoryList = document.getElementById('categoryList');
        categoryList.innerHTML = '';
        
        state.categories.forEach(category => {
          const div = document.createElement('div');
          div.className = 'flex justify-between items-center p-2 border-b hover:bg-gray-50 cursor-pointer';
          div.onclick = () => selectCategoryForEdit(category.id);
          div.innerHTML = `
            <span class="text-sm">${category.name}</span>
            <button onclick="event.stopPropagation(); deleteCategory(${category.id})" class="text-red-500 hover:text-red-700">
              <i class="fas fa-trash text-xs"></i>
            </button>
          `;
          categoryList.appendChild(div);
        });
      }

      function selectCategoryForEdit(categoryId) {
        const category = state.categories.find(c => c.id === categoryId);
        if (!category) return;
        
        state.selectedCategoryId = categoryId;
        
        document.getElementById('categoryName').value = category.name;
        document.getElementById('categoryIcon').value = category.icon;
        document.getElementById('categoryDescription').value = category.description;
        document.getElementById('categoryTiming').value = category.timing;
        document.getElementById('categoryColor').value = category.color;
        
        showNotification(`Selected "${category.name}" for editing`);
      }

      function addCategory() {
        const name = document.getElementById('categoryName').value;
        const icon = document.getElementById('categoryIcon').value;
        const description = document.getElementById('categoryDescription').value;
        const timing = document.getElementById('categoryTiming').value;
        const color = document.getElementById('categoryColor').value;
        
        if (!name || !icon || !description || !timing) {
          showNotification('Please fill in all required fields', 'error');
          return;
        }
        
        const newCategory = {
          id: state.categories.length > 0 ? Math.max(...state.categories.map(c => c.id)) + 1 : 1,
          name: name,
          icon: icon,
          description: description,
          timing: timing,
          color: color
        };
        
        state.categories.push(newCategory);
        saveSiteData();
        loadCategories();
        loadCategoryList();
        
        document.getElementById('categoryName').value = '';
        document.getElementById('categoryIcon').value = '';
        document.getElementById('categoryDescription').value = '';
        document.getElementById('categoryTiming').value = '';
        
        showNotification('Category added successfully!', 'success');
      }

      function updateCategory() {
        if (!state.selectedCategoryId) {
          showNotification('Please select a category to edit first', 'error');
          return;
        }
        
        const category = state.categories.find(c => c.id === state.selectedCategoryId);
        if (!category) return;
        
        category.name = document.getElementById('categoryName').value;
        category.icon = document.getElementById('categoryIcon').value;
        category.description = document.getElementById('categoryDescription').value;
        category.timing = document.getElementById('categoryTiming').value;
        category.color = document.getElementById('categoryColor').value;
        
        saveSiteData();
        loadCategories();
        loadCategoryList();
        
        showNotification('Category updated successfully!', 'success');
      }

      function deleteCategory(categoryId) {
        if (categoryId <= 4) {
          showNotification('Cannot delete default categories', 'error');
          return;
        }
        
        if (confirm('Are you sure you want to delete this category?')) {
          state.categories = state.categories.filter(c => c.id !== categoryId);
          saveSiteData();
          loadCategories();
          loadCategoryList();
          showNotification('Category deleted!', 'success');
        }
      }

      function loadTagList() {
        const tagList = document.getElementById('tagList');
        tagList.innerHTML = '';
        
        const sortedTags = [...state.tags].sort((a, b) => a.order - b.order);
        
        sortedTags.forEach(tag => {
          const div = document.createElement('div');
          div.className = 'flex justify-between items-center p-2 border-b hover:bg-gray-50 cursor-pointer';
          div.onclick = () => selectTagForEdit(tag.id);
          div.innerHTML = `
            <span class="text-sm">${tag.text}</span>
            <button onclick="event.stopPropagation(); deleteTag(${tag.id})" class="text-red-500 hover:text-red-700">
              <i class="fas fa-trash text-xs"></i>
            </button>
          `;
          tagList.appendChild(div);
        });
      }

      function selectTagForEdit(tagId) {
        const tag = state.tags.find(t => t.id === tagId);
        if (!tag) return;
        
        state.selectedTagId = tagId;
        
        document.getElementById('tagText').value = tag.text;
        document.getElementById('tagIcon').value = tag.icon;
        document.getElementById('tagColor').value = tag.color;
        document.getElementById('tagOrder').value = tag.order;
        
        showNotification(`Selected "${tag.text}" for editing`);
      }

      function addTag() {
        const text = document.getElementById('tagText').value;
        const icon = document.getElementById('tagIcon').value;
        const color = document.getElementById('tagColor').value;
        const order = parseInt(document.getElementById('tagOrder').value);
        
        if (!text || !icon || !order) {
          showNotification('Please fill in all required fields', 'error');
          return;
        }
        
        const newTag = {
          id: state.tags.length > 0 ? Math.max(...state.tags.map(t => t.id)) + 1 : 1,
          text: text,
          icon: icon,
          color: color,
          order: order
        };
        
        state.tags.push(newTag);
        saveSiteData();
        loadTags();
        loadTagList();
        
        document.getElementById('tagText').value = '';
        document.getElementById('tagIcon').value = '';
        document.getElementById('tagOrder').value = '';
        
        showNotification('Tag added successfully!', 'success');
      }

      function updateTag() {
        if (!state.selectedTagId) {
          showNotification('Please select a tag to edit first', 'error');
          return;
        }
        
        const tag = state.tags.find(t => t.id === state.selectedTagId);
        if (!tag) return;
        
        tag.text = document.getElementById('tagText').value;
        tag.icon = document.getElementById('tagIcon').value;
        tag.color = document.getElementById('tagColor').value;
        tag.order = parseInt(document.getElementById('tagOrder').value);
        
        saveSiteData();
        loadTags();
        loadTagList();
        
        showNotification('Tag updated successfully!', 'success');
      }

      function deleteTag(tagId) {
        if (tagId <= 4) {
          showNotification('Cannot delete default tags', 'error');
          return;
        }
        
        if (confirm('Are you sure you want to delete this tag?')) {
          state.tags = state.tags.filter(t => t.id !== tagId);
          saveSiteData();
          loadTags();
          loadTagList();
          showNotification('Tag deleted!', 'success');
        }
      }

      function updateBranding() {
        state.siteData.siteTitle = document.getElementById('siteTitleInput').value;
        state.siteData.tagline = document.getElementById('siteTagline').value;
        state.siteData.heroTitle = document.getElementById('heroTitleInput').value;
        state.siteData.heroSubtitle = document.getElementById('heroSubtitleInput').value;
        state.siteData.heroDescription = document.getElementById('heroDescriptionInput').value;
        
        saveSiteData();
        loadSiteContent();
        
        showNotification('Branding updated successfully!', 'success');
      }

      function updateSectionTitles() {
        state.siteData.categoriesTitle = document.getElementById('categoriesTitleInput').value;
        state.siteData.categoriesDescription = document.getElementById('categoriesDescriptionInput').value;
        state.siteData.fastSellingTitle = document.getElementById('fastSellingTitleInput').value;
        state.siteData.fastSellingDescription = document.getElementById('fastSellingDescriptionInput').value;
        
        saveSiteData();
        loadSiteContent();
        
        showNotification('Section titles updated successfully!', 'success');
      }

      function updateContactFooter() {
        state.siteData.footerTitle = document.getElementById('footerTitleInput').value;
        state.siteData.footerDescription = document.getElementById('footerDescriptionInput').value;
        state.siteData.contactPhone = document.getElementById('contactPhone').value;
        state.siteData.contactEmail = document.getElementById('contactEmail').value;
        state.siteData.contactAddress = document.getElementById('contactAddress').value;
        state.siteData.deliveryHours = document.getElementById('deliveryHoursInput').value;
        state.siteData.copyright = document.getElementById('copyrightText').value;
        
        saveSiteData();
        loadSiteContent();
        
        showNotification('Contact & footer updated successfully!', 'success');
      }

      function updateImages() {
        state.siteData.heroImages = [
          document.getElementById('heroImage1').value,
          document.getElementById('heroImage2').value,
          document.getElementById('heroImage3').value
        ];
        
        saveSiteData();
        loadSiteContent();
        
        showNotification('Images updated successfully!', 'success');
      }

      function loadBlogList() {
        const blogList = document.getElementById('blogList');
        blogList.innerHTML = '';
        
        state.blogPosts.forEach(blog => {
          const div = document.createElement('div');
          div.className = 'flex justify-between items-center p-2 border-b hover:bg-gray-50 cursor-pointer';
          div.onclick = () => selectBlogForEdit(blog.id);
          div.innerHTML = `
            <span class="text-sm">${blog.title}</span>
            <button onclick="event.stopPropagation(); deleteBlogPost(${blog.id})" class="text-red-500 hover:text-red-700">
              <i class="fas fa-trash text-xs"></i>
            </button>
          `;
          blogList.appendChild(div);
        });
      }

      function selectBlogForEdit(blogId) {
        const blog = state.blogPosts.find(b => b.id === blogId);
        if (!blog) return;
        
        state.selectedBlogId = blogId;
        
        document.getElementById('blogTitleInput').value = blog.title;
        document.getElementById('blogContent').value = blog.content;
        document.getElementById('blogImage').value = blog.image;
        document.getElementById('blogCategory').value = blog.category;
        document.getElementById('blogDate').value = blog.date;
        
        showNotification(`Selected "${blog.title}" for editing`);
      }

      function addBlogPost() {
        const title = document.getElementById('blogTitleInput').value;
        const content = document.getElementById('blogContent').value;
        const image = document.getElementById('blogImage').value;
        const category = document.getElementById('blogCategory').value;
        const date = document.getElementById('blogDate').value;
        
        if (!title || !content) {
          showNotification('Please fill in title and content', 'error');
          return;
        }
        
        const newPost = {
          id: state.blogPosts.length > 0 ? Math.max(...state.blogPosts.map(b => b.id)) + 1 : 1,
          title: title,
          content: content,
          image: image || 'https://images.unsplash.com/photo-1546069901-ba9599a7e63c?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80',
          date: date || new Date().toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }),
          category: category || 'Update'
        };
        
        state.blogPosts.push(newPost);
        saveSiteData();
        loadBlogPosts();
        loadBlogList();
        
        document.getElementById('blogTitleInput').value = '';
        document.getElementById('blogContent').value = '';
        document.getElementById('blogImage').value = '';
        document.getElementById('blogCategory').value = '';
        document.getElementById('blogDate').value = '';
        
        showNotification('Blog post added successfully!', 'success');
      }

      function updateBlogPost() {
        if (!state.selectedBlogId) {
          showNotification('Please select a blog post to edit first', 'error');
          return;
        }
        
        const blog = state.blogPosts.find(b => b.id === state.selectedBlogId);
        if (!blog) return;
        
        blog.title = document.getElementById('blogTitleInput').value;
        blog.content = document.getElementById('blogContent').value;
        blog.image = document.getElementById('blogImage').value;
        blog.category = document.getElementById('blogCategory').value;
        blog.date = document.getElementById('blogDate').value;
        
        saveSiteData();
        loadBlogPosts();
        loadBlogList();
        
        showNotification('Blog post updated successfully!', 'success');
      }

      function deleteBlogPost(blogId) {
        if (blogId <= 3) {
          showNotification('Cannot delete default blog posts', 'error');
          return;
        }
        
        if (confirm('Are you sure you want to delete this blog post?')) {
          state.blogPosts = state.blogPosts.filter(b => b.id !== blogId);
          saveSiteData();
          loadBlogPosts();
          loadBlogList();
          showNotification('Blog post deleted!', 'success');
        }
      }

      function exportSiteData() {
        const data = {
          siteData: state.siteData,
          categories: state.categories,
          tags: state.tags,
          menuItems: state.menuItems,
          blogPosts: state.blogPosts,
          logoSettings: state.logoSettings // ADDED
        };
        
        const dataStr = JSON.stringify(data, null, 2);
        const dataUri = 'data:application/json;charset=utf-8,'+ encodeURIComponent(dataStr);
        
        const exportFileDefaultName = 'grubnmore-site-data.json';
        
        const linkElement = document.createElement('a');
        linkElement.setAttribute('href', dataUri);
        linkElement.setAttribute('download', exportFileDefaultName);
        linkElement.click();
        
        showNotification('Site data exported successfully!', 'success');
      }

      function importSiteData() {
        const input = document.createElement('input');
        input.type = 'file';
        input.accept = '.json';
        
        input.onchange = e => {
          const file = e.target.files[0];
          const reader = new FileReader();
          
          reader.onload = event => {
            try {
              const data = JSON.parse(event.target.result);
              
              if (data.siteData) state.siteData = data.siteData;
              if (data.categories) state.categories = data.categories;
              if (data.tags) state.tags = data.tags;
              if (data.menuItems) state.menuItems = data.menuItems;
              if (data.blogPosts) state.blogPosts = data.blogPosts;
              // ADDED: Import logo settings
              if (data.logoSettings) {
                state.logoSettings = data.logoSettings;
                saveLogoSettings();
                updateLogoDisplay();
              }
              
              saveSiteData();
              loadSiteContent();
              closeAdminPanel();
              showAdminPanel();
              loadAdminData();
              
              showNotification('Site data imported successfully!', 'success');
            } catch (error) {
              showNotification('Error importing data. Please check the file format.', 'error');
            }
          };
          
          reader.readAsText(file);
        };
        
        input.click();
      }

