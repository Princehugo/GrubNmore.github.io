            footerTitle: "GrubNmore",
            footerDescription: "Lagos' Premier Cloud Kitchen - Bringing authentic flavors to your doorstep.",
            contactPhone: "+234 812 345 6789\n+234 812 345 6789",
            contactEmail: "orders@grubnmore.com",
            contactAddress: "Lagos, Nigeria",
